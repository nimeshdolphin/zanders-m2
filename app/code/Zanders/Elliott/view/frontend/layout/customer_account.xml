<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="my-open-orders">
                <arguments>
                    <argument name="path" xsi:type="string">zanders/orders</argument>
                    <argument name="label" xsi:type="string" translate="true">My Open Orders</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="my-back-order-list">
                <arguments>
                    <argument name="path" xsi:type="string">zanders/orders/backorders</argument>
                    <argument name="label" xsi:type="string" translate="true">My Back Order List</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>