<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="zanders_description" resource="default" comment="Zanders Description Table" charset="utf8"
           engine="innodb">
        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false"
                comment="Description Id"/>
        <column xsi:type="int" name="product_id" nullable="false" unsigned="true" default="0"/>
        <column xsi:type="varchar" name="sku" length="255" nullable="false"/>
        <column xsi:type="datetime" name="updated" nullable="true"/>
        <column xsi:type="text" name="html" nullable="true"/>
        <column xsi:type="text" name="text" nullable="true"/>
        <column xsi:type="varchar" name="file_loc" length="255" nullable="true"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="ZANDERS_DESCRIPTION_SKU" indexType="fulltext">
            <column name="sku"/>
        </index>
    </table>
</schema>
