<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="POST" url="/V1/promotedmanufacturer_api/create">
		<service class="Zanders\PromotedManufacturer\Api\PromotedManufacturerRepositoryInterface" method="save"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
	<route method="GET" url="/V1/promotedmanufacturer_api/list">
		<service class="Zanders\PromotedManufacturer\Api\PromotedManufacturerRepositoryInterface" method="getList"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
	<route method="GET" url="/V1/promotedmanufacturer_api/get/:promotedmanufacturerId">
		<service class="Zanders\PromotedManufacturer\Api\PromotedManufacturerRepositoryInterface" method="get"/>
		<resources>
			<resource ref="Zanders_PromotedManufacturer::PromotedManufacturer_view"/>
		</resources>
	</route>
	<route method="PUT" url="/V1/zanders-promotedmanufacturer/promotedmanufacturer/:promotedmanufacturerId">
		<service class="Zanders\PromotedManufacturer\Api\PromotedManufacturerRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Zanders_PromotedManufacturer::PromotedManufacturer_update"/>
		</resources>
	</route>
	<route method="DELETE" url="/V1/zanders-promotedmanufacturer/promotedmanufacturer/:promotedmanufacturerId">
		<service class="Zanders\PromotedManufacturer\Api\PromotedManufacturerRepositoryInterface" method="deleteById"/>
		<resources>
			<resource ref="Zanders_PromotedManufacturer::PromotedManufacturer_delete"/>
		</resources>
	</route>
</routes>
