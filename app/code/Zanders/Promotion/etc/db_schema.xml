<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="zanders_promotion" resource="default" comment="Zanders Promotion Table" charset="utf8"
           engine="innodb">
        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false"
                comment="Promotion Id"/>
        <column xsi:type="varchar" name="title" length="255" nullable="false"/>
        <column xsi:type="tinyint" name="type" nullable="false" default="1"/>
        <column xsi:type="text" name="pdf" nullable="true"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="ZANDERS_PROMOTION_TITLE" indexType="fulltext">
            <column name="title"/>
        </index>
    </table>
    <table name="zanders_bogo" resource="default" comment="Zanders BOGO Promotion Table" charset="utf8"
           engine="innodb">
        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false"
                comment="BOGO Promotion Id"/>
        <column xsi:type="varchar" name="buy_one_sku" length="255" nullable="false"/>
        <column xsi:type="int" name="buy_one_id" nullable="false" default="0"/>
        <column xsi:type="varchar" name="get_one_sku" length="255" nullable="false"/>
        <column xsi:type="int" name="get_one_id" nullable="false" default="0"/>
        <column xsi:type="text" name="details" nullable="true"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="ZANDERS_BOGO_BUY_ONE_SKU_GET_ONE_SKU" indexType="fulltext">
            <column name="buy_one_sku"/>
            <column name="get_one_sku"/>
        </index>
    </table>
    <table name="zanders_toppromo" resource="default" comment="Zanders Top Promotion Table" charset="utf8"
           engine="innodb">
        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false"
                comment="Top Promotion Id"/>
        <column xsi:type="varchar" name="title" length="255" nullable="false"/>
        <column xsi:type="varchar" name="image" length="500" nullable="false"/>
        <column xsi:type="varchar" name="link" length="500" nullable="false"/>
        <column xsi:type="int" name="sort" nullable="false" default="0"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="ZANDERS_TOPPROMO_TITLE" indexType="fulltext">
            <column name="title"/>
        </index>
    </table>
</schema>
