					</strong>
					<div class="desc std">
                        <?= __('Item Number: ');?><span style="font-weight: bold;"><?= $_product->getSku(); ?></span>
                    </div>
                    <?php
	                	$upc = $_product->getUpc();
	                	if(!empty($upc)):
	                ?>
	                	<div class="desc std">
